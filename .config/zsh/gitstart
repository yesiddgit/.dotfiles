#!/bin/sh

repo_name=$1
test -z $repo_name && echo "Repo name required." 1>&2 && exit 1

curl -u 'yesiddgit' https://api.github.com/user/repos -d "{\"name\":\"$repo_name\"}"

git init
git add .
git commit -m "Init Repo"
git branch -M master
git remote add origin git@github.com:yesiddgit/$repo_name.git
git push -u origin master
